                      | Durée
                    .slider-title-value
                      | 20 ans

                  .slider-bar.slider-2
                    span.slider-bar-fill
                      span.slider-bar-button

                .slider.accent-5
                  .slider-title
                    | Mensualité

                  .slider-bar.slider-3
                    span.slider-bar-fill
                      span.slider-bar-button

              .view-slider-container-bank
                .bank-list
                  .bank-list-line
